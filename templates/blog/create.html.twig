{% extends "base.html.twig" %}

{% block title %}Creation d'article
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/assets/css/blog.css">
{% endblock %}

{% block body %}
<div class="container">

	<h1 class= "my-5">
		{% if editMode %}
			Modifier l'article
		{% else %}
			Création d'un article
		{% endif %}
	</h1>

		{{ form_start(formArticle) }}
		{{ form_row(formArticle.title, 
			{ 'label': 'Titre de l\'article' }, 
			{'attr': {'placeholder': "Titre de l'article"}}) }}
		{{ form_row(formArticle.category, { 'label': 'Catégorie de l\'article' }) }}
		{{ form_row(formArticle.content, 
			{ 'label': 'Contenu de l\'article' }, 
			{'attr': {'placeholder': "Contenu de l'article"}}) }}
		{{ form_row(formArticle.image, 
			{ 'label': 'Image de l\'article' }, 
			{'attr': {'placeholder': "Url de l'image"}}) }}

		<button type="submit" class="btn btn-success mt-5">
			{% if editMode %}
				Enregistrer les modifications
			{% else %}
				Ajouter l'article
			{% endif %}
		</button>
		{{ form_end(formArticle) }}
	</div>
{% endblock %}
