{% extends "base.html.twig" %}

{% block title %}Panier
{% endblock %}

{% block body %}

    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>

    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.service.title }}</td>
                        <td>{{ item.service.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.service.price * item.quantity }}</td>
                        <td>
                            <a href="{{ path('cart_remove', {'id': item.service.id}) }}" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total :
                    </td>
                    <td>{{ total }}</td>
                    <td>
                        <a href="{{ path('payement') }}" class="btn btn-success">Payer</a>
                    </td>
                </tr>
            </tfoot>
        </table>

    {% else %}
        <p>Surprise c'est vide !</p>
    {% endif %}


{% endblock %}
