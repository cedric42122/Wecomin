{% extends "base.html.twig" %}

{% block title %}Payement
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/assets/css/stripe.css">
{% endblock %}

{% block body %}
<h1 class="text-center my-5">Veuillez saisir vos informations...</h1>
  <div class="container">
  <form method="post" id="payment-form">
    <div class="form-row flex-column">
      <label id="labelPayment" for="card-element">
        Information carte de cr√©dit...
      </label>
      <div id="card-element">
        <!-- A Stripe Element will be inserted here. -->
      </div>
      <!-- Used to display form errors. -->
      <div id="card-errors" role="alert"></div>
    </div>

    <button class="btn btn-success mt-5">Valider le payement</button>
  </form>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://js.stripe.com/v3/"></script>
<script src="/assets/js/stripe.js"></script>
{% endblock %}