<form action="/admin/actionServiceChange" class="border" method="POST">
  <h1 id="ModifServiceTitle" class="text-center my-5">Modification de la prestation "{{ service.title }}"</h1>
  {{ form_start(serviceChangeForm) }}
  {{ form_row(serviceChangeForm.title, {'label': 'Titre de la prestation'}) }}
  {{ form_row(serviceChangeForm.description) }}
  {% if service.picture %}
    <img class= "img-fluid my-3" src="{{service.picture}}" alt="Image de la prestation choisie" 
  {% endif %} 
  <div class="form-control-file">
  {{ form_widget(serviceChangeForm.picture, {'attr': {'placeholder': "Image de la prestation"}}) }}
  </div>
  {{ form_row(serviceChangeForm.price, {'label': 'Prix'} ) }}
  {{ form_row(serviceChangeForm.promotion ) }}

  <input type="hidden" name="id" value="{{service.id}}">
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalServiceChange">
    MODIFIER
  </button>

  <!-- Modal -->
  <div class="modal fade" id="modalServiceChange" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">MODIFICATION DE LA PRESTATION</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Voulez-vous vraiment appliquer les modifications ?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">ANNULER</button>
          <button type="submit" class="btn btn-primary">MODIFIER</button>
        </div>
      </div>
    </div>
  </div>
  {{ form_end(serviceChangeForm) }}
</form>