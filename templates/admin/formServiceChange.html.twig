<form action="/admin/actionServiceChange" class="border" method="POST">
    <h1 class="text-center">Modification de la prestation
        {{ idService.title }}</h1>

    {{ form_start(serviceChangeForm) }}
    {{ form_row(serviceChangeForm.title) }}
    {{ form_row(serviceChangeForm.description) }}
    {{ form_row(serviceChangeForm.picture ) }}
    {{ form_row(serviceChangeForm.price ) }}
    {{ form_row(serviceChangeForm.promotion ) }}

    <input type="hidden" name="id" value="{{idService.id}}">

    <input type="submit" value="MODIFIER">
    {{ form_end(serviceChangeForm) }}

</form>
