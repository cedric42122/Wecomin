{% extends "base.html.twig" %}
{% block title %}Contact
{% endblock %}
{% block stylesheet %}{% endblock %}
        

{% block body %}
    <div id="bgContact" class="container">
        <div class="row mt-5 d-flex justify-content-around">
            <div>
                <iframe width="425" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=4.1405582427978525%2C45.83776961260888%2C4.206304550170899%2C45.872560923854486&amp;layer=mapnik&amp;marker=45.855167989021616%2C4.173431396484375" style="border: 1px solid black"></iframe><br/><small>
                    <a href="https://www.openstreetmap.org/?mlat=45.8552&amp;mlon=4.1734#map=14/45.8552/4.1734">Afficher une carte plus grande</a>
                </small>
            </div>
            <div id="contactForm">
                {{ form_start(form)}}
                <div class="row">
                    <div class="col">
                        {{ form_row(form.firstname, { 'label': 'Prénom'} )}}</div>
                    <div class="col">
                        {{ form_row(form.lastname, { 'label': 'Nom'} )}}</div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form.phone, { 'label': 'Numéro de téléphone'} )}}</div>
                    <div class="col">
                        {{ form_row(form.email, { 'label': 'Email'} )}}</div>
                </div>
                {{ form_rest(form)}}
                <div class="form-group">
                <button class="btn btn-primary">Envoyer</button>
                </div>
                {{ form_end(form)}}

            </div>
        </div>
    </div>
{% endblock %}
