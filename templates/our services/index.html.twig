{% extends "base.html.twig" %}

{% block title %}Nos prestations
{% endblock %}

{% block body %}
    <div class="row bg-light p-3">
        <h1>Les prestations</h1>
        <a href="{{ path('cart_index') }}" class="btn btn-primary btn-info">Votre panier
        <i class="fas fa-shopping-cart"></i> </a>
    </div>
    <div class="row">
        {% for service in services %}
            <services class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>
                        {{ service.title }}
                        -
                        {{ service.price }}â‚¬
                    </h2>
                    <img class="img-fluid rounded" src="{{ service.picture }}" alt="image de {{ service.title }}">
                    <div>{{ service.description | raw }}</div>
                    <hr>
                    <a class="btn btn-success float-right" href="{{ path('cart_add', {'id': service.id}) }}">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>
            </services>
        {% endfor %}
    </div>
{% endblock %}
